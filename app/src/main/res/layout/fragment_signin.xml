<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.screens.auth.Signin" >

    <EditText
        android:id="@+id/enter_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Ваш логин"
        android:inputType="textPersonName"
        android:textColorHint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/enter_pass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ваш пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/teal_200"
        app:layout_constraintEnd_toEndOf="@+id/enter_login"
        app:layout_constraintStart_toStartOf="@+id/enter_login"
        app:layout_constraintTop_toBottomOf="@+id/enter_login"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/bt_singin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Войти"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/enter_pass"
        app:layout_constraintStart_toStartOf="@+id/enter_pass"
        app:layout_constraintTop_toBottomOf="@+id/enter_pass" />

    <Button
        android:id="@+id/btRegister"
        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:text="Зарегистрироваться"
        android:textColor="@color/text_for_sections"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/bt_singin"
        app:layout_constraintStart_toStartOf="@+id/bt_singin"
        app:layout_constraintTop_toBottomOf="@+id/bt_singin" />

</androidx.constraintlayout.widget.ConstraintLayout>